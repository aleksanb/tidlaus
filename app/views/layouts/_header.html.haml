.container
	.row
		.twelvecol.last#title
			=#image_tag 'rails.png'
			%h1 TIDLAUS
	.row.topmenu
		.twelvecol.last
			%nav
				= link_to "Heim", root_path, active_page_class(root_path)
				= link_to "Om", about_path, active_page_class(about_path)
				= link_to "Magi", magi_path, active_page_class(magi_path)
				= link_to "Chat", chat_path, active_page_class(chat_path)
				= link_to "Longurl", new_link_path, active_controller_class('links') 	
			- if logged_in
				%nav
					Logget inn som:
					= link_to current_user.name.capitalize, user_path(current_user), active_controller_class('users')
					= link_to "Logout", logout_path
			- else
				%nav
					= link_to "Login", login_path, active_page_class(login_path)