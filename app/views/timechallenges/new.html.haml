%article
  %header
    %h1 New Timechallenge
  %section
    = semantic_form_for @timechallenge do |f|
      = f.input :title
      = f.input :reward
      = f.input :deadline, as: :string, input_html: { class: "datetime_select", value: l(Time.zone.now, :format => :formtastic) }
      = f.actions :submit
